@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ArticlePage>
@using ContentModels = JNCC.PublicWebsite.Core.Models;
@{
    Layout = "Master.cshtml";
}
<main id="main">
    @(Html.Action<PageHeroSurfaceController>("RenderPageHero"))
    <div class="container">
        @(Html.Action<BreadcrumbsSurfaceController>("RenderBreadcrumbs"))
        <div class="two-columns">
            <div id="content">
                @(Html.Action<PageHeroSurfaceController>("RenderNoPageHeroHeadline"))
                <p>@Html.DisplayFor(model => Model.Content.PublishDate)</p>
                @Model.Content.MainContent
            </div>
            @(Html.Action<SidebarSurfaceController>("RenderArticlePageSidebar"))
        </div>
    </div>
    @(Html.Action<RelatedItemsSurfaceController>("RenderRelatedItems"))
</main>