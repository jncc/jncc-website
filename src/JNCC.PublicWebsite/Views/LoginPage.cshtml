@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.LoginPage>
@using ContentModels = JNCC.PublicWebsite.Core.Models;
@{
    Layout = "Master.cshtml";
}
<main id="main">
    @(Html.Action<PageHeroSurfaceController>("RenderPageHero"))
    <div class="container">
        @(Html.Action<BreadcrumbsSurfaceController>("RenderBreadcrumbs"))
        <div class="two-columns">
            <div id="content">
                <div class="row collapse">
                    <div class="columns large-6">
                        @(Html.Action<PageHeroSurfaceController>("RenderNoPageHeroHeadline"))
                        @(Html.Action<LoginFormSurfaceController>("RenderLoginForm"))
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>