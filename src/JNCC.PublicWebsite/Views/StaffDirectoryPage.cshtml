@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.StaffDirectoryPage>
@using ContentModels = JNCC.PublicWebsite.Core.Models;
@{
    Layout = "Master.cshtml";
}
@(Html.Action<PageHeroSurfaceController>("RenderPageHero"))
<div class="container">
    @(Html.Action<BreadcrumbsSurfaceController>("RenderBreadcrumbs"))
    <div class="two-columns stretch-layout staff-directory columns-reverse-layout">
        @(Html.Action<StaffDirectorySurfaceController>("RenderFiltering"))
        <div id="content">
            <section class="staff-holder">
                @(Html.Action<PageHeroSurfaceController>("RenderNoPageHeroHeadline"))
                @Model.Content.Preamble
                @(Html.Action<StaffDirectorySurfaceController>("RenderListing"))
            </section>
        </div>
    </div>
</div>