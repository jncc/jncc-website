@model IScienceDetailsImageCodeSectionViewModel

<div class="row collapse">
    @if (Model.ImagePosition == "Top")
    {
        <div class="columns small-12">
            <div class="row collapse display-end">
                <div class="columns small-12">
                    @Html.Raw(Model.ImageCode)
                </div>
            </div>
            <div class="row collapse">
                <div class="columns small-12">
                    @Model.Content
                </div>
            </div>
        </div>
    }
    else if (Model.ImagePosition == "Right")
    {
        <div class="columns small-12 medium-6 small-order-2 medium-order-1 right-pad">
            @Model.Content
        </div>
        <div class="columns small-12 medium-6 small-order-1 medium-order-2">
            @Html.Raw(Model.ImageCode)
        </div>
    }
    else
    {
        <div class="columns small-12 medium-6 small-order-1 medium-order-1">
            @Html.Raw(Model.ImageCode)
        </div>
        <div class="columns small-12 medium-6 small-order-2 medium-order-2 left-pad">
            @Model.Content
        </div>
    }

</div>
