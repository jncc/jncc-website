@model JNCC.PublicWebsite.Core.Models.ChangePasswordModel
@using (Html.BeginUmbracoForm<ChangePasswordFormSurfaceController>("PerformChangePassword"))
{
    @Html.FoundationValidationSummary()
    if (TempData.HasSuccessFlag())
    {
        <div class="callout success">
            <p>Password changed successfully.</p>
        </div>
    }
    <div class="form-field">
        <label for="@Html.NameFor(model => model.OldPassword)">
            Old Password
            @Html.PasswordFor(model => model.OldPassword)
        </label>
    </div>
    <div class="form-field">
        <label for="@Html.NameFor(model => model.NewPassword)">
            New Password
            @Html.PasswordFor(model => model.NewPassword)
        </label>
    </div>
    <div class="form-field">
        <label for="@Html.NameFor(model => model.ConfirmNewPassword)">
            Confirm New Password
            @Html.PasswordFor(model => model.ConfirmNewPassword)
        </label>
    </div>
    <div class="form-field">
        <input type="submit" value="Change Password" class="button primary">
    </div>
    @Html.AntiForgeryToken()
}