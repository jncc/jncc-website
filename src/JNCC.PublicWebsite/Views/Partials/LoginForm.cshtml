@model JNCC.PublicWebsite.Core.Models.LoginFormModel
@{
    var validationSummaryHtmlAttributes = new Dictionary<string, object>()
    {
        { "class", "callout alert validation-summary" }
    };
}
@using (Html.BeginUmbracoForm<LoginFormSurfaceController>("PerformLogin"))
{
    @Html.ValidationSummary(htmlAttributes: validationSummaryHtmlAttributes)
    <div class="form-field">
        <label for="@Html.NameFor(model => model.Username)">
            Username
            @Html.TextBoxFor(model => model.Username)
        </label>
    </div>
    <div class="form-field">
        <label for="@Html.NameFor(model => model.Password)">
            Password
            @Html.PasswordFor(model => model.Password)
        </label>
    </div>
    <div class="form-field">
        <input type="checkbox" name="@Html.NameFor(model => model.RememberMe)" value="true">
        <label for="@Html.NameFor(model => model.RememberMe)">Remember Me (Not recommended on public computers or devices)</label>
    </div>
    <div class="form-field">
        <input type="submit" value="Login" class="button primary">
    </div>
    @Html.AntiForgeryToken()
}