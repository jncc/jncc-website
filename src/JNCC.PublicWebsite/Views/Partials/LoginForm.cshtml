@model JNCC.PublicWebsite.Core.Models.LoginFormModel
@using (Html.BeginUmbracoForm<LoginFormSurfaceController>("PerformLogin"))
{
    @Html.FoundationValidationSummary()
    <div class="form-field">
        <label for="@Html.IdFor(model => model.Username)">
            Username
            @Html.TextBoxFor(model => model.Username)
        </label>
    </div>
    <div class="form-field">
        <label for="@Html.IdFor(model => model.Password)">
            Password
            @Html.PasswordFor(model => model.Password)
        </label>
    </div>
    <div class="form-field">
        <input type="checkbox" id="@Html.IdFor(model => model.RememberMe)" name="@Html.NameFor(model => model.RememberMe)" value="true">
        <label for="@Html.NameFor(model => model.RememberMe)">Remember Me (Not recommended on public computers or devices)</label>
    </div>
    <div class="form-field">
        <input type="submit" value="Login" class="button primary">
    </div>
    @Html.AntiForgeryToken()
}